
.page {
	background: #f6f5ec;
	font-size: 28rpx;
	height: 100vh;
	overflow: scroll;
}
.margin-b-10 {
	margin-top: 20rpx;
}
.margin-t-5 {
	margin: 10rpx 0;
}
.input_withlabel {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	margin: 10rpx 0;
}
.bottom_del {
	text-align: right;
}
.del {
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: -ms-inline-flexbox;
	display: inline-flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	background: #aa2116;
	color: #fff;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	    -ms-flex-pack: end;
	        justify-content: flex-end;
	padding: 4rpx 12rpx;
	-webkit-border-radius: 8rpx;
	        border-radius: 8rpx;
}
.input_label {
	border: 1rpx solid#ddd;
	-webkit-border-radius: 8rpx;
	        border-radius: 8rpx;
	padding: 0 6rpx;
	width: 140rpx;
	color: #aa2116;
}

