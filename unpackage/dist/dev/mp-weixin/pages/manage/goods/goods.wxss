
.text_notice {
	margin-left: 6rpx;
}
.content {
	height: 100%;
	overflow: hidden;
}
.uni-product-list {
	padding: 0 10rpx;
	width: -webkit-calc(100% - 20rpx);
	width: calc(100% - 20rpx);
	height: -webkit-calc(100vh - 80rpx);
	height: calc(100vh - 80rpx);
}
